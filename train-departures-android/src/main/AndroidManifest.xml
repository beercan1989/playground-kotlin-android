<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uk.co.baconi.pka.td">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".DepartureSearchActivity"
            android:label="@string/title_activity_departure_search"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Enables search dialog -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- Enables the search dialog for finding stations. -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_stations" />
        </activity>

        <activity
            android:name=".settings.SettingsActivity"
            android:parentActivityName=".DepartureSearchActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".servicedetails.ServiceDetailsActivity"
            android:parentActivityName=".DepartureSearchActivity"
            android:label="@string/title_activity_service_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".errors.ErrorActivity"
            android:parentActivityName=".DepartureSearchActivity"
            android:label="@string/title_activity_error"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:authorities="uk.co.baconi.pka.td.stations"
            android:name=".stations.StationSuggestionProvider" />

    </application>

</manifest>